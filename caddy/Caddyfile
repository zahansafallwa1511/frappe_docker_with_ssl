erp-dpp-byo-tres.digiprodpass.com {
    encode gzip

    reverse_proxy frontend:8080 {
        header_up Host {host}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Real-IP {remote_host}
    }

    log {
        output file /data/caddy/access.log
        format console
    }

    tls {
        issuer acme
    }
}